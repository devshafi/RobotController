<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frshafi.robotcontroller.ChooseActivity">

    <Button
        android:id="@+id/button_chooseCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_mode"
        android:textColor="@android:color/white"
        android:background="@drawable/button_back"
        android:padding="5dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/button_chooseLight"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button_chooseLight"
        android:layout_marginLeft="6dp" />

    <Button
        android:id="@+id/button_chooseLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@drawable/button_back"
        android:padding="5dp"
        android:text="@string/light_mode"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
